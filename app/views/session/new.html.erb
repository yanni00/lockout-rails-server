<div id="centerScreen">
  <div id="loginBox">

  <h2>Login</h2>

  <% if flash[:error] %>
    <!-- Print out any error message for the user -->
    <br>
    <strong><%= flash[:error] %></strong>
    <br>
  <% end %>

  <%= form_tag login_path do %>

    <%= label_tag :email %>
    <%= email_field_tag :email %>

    <br>

    <%= label_tag :password %>
    <%= password_field_tag :password %>

    <br>

    <%= submit_tag 'Login' %>

  <% end %>

  </div>
  <div class="centerScreen">

  <div id="loginBox">
    <%= link_to 'Not a user? Sign Up!', new_user_path %>

  </div>
</div>
</div>
